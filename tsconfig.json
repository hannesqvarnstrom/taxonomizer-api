{
    "compilerOptions": {
        "typeRoots": ["./types"],
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,     
        "target": "es2017",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "paths": {
            "@src/*": [ "src/*" ],
            "@models/*": [ "src/models/*" ],
            "*": [
                "node_modules/*",
                "src/types/*",
            ]
        }
    },
    "include": [
        "src/**/*",
        "migrations/*",
        "./knexfile.ts",
        "types/express/index.d.ts"
    ]
}
