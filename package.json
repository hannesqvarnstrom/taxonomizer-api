{
  "name": "express-ts-template",
  "version": "1.2.0",
  "description": "Simple starter template for ExpressJs and TypeScript based on expressjs/generator and TypeScript-Node-Starter",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/src/server.js",
    "test": "NODE_ENV=test npx tap src/test --bail --jobs=1 -c --reporter=classic --no-timeout --debug --after=src/test/utils/bailout.ts",
    "test:err": "SHOW_ERROR=true NODE_ENV=test npx tap src/test --bail --jobs=1 -c --reporter=classic --no-timeout --debug --after=src/test/utils/bailout.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/src/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "dev": "concurrently \"npm run watch-node\" \"npm run watch-ts\"",
    "lint": "eslint src/*.ts",
    "lint-fix": "yarn lint --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/src/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "typecheck": "tsc --noEmit",
    "run-prettier": "prettier src/*.ts",
    "validate-prettiness": "yarn run-prettier -c",
    "make-prettier": "yarn run-prettier --write",
    "tools": "ts-node ./tools"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/heroku-logger": "^1.0.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^8.6.5",
    "ajv": "^8.11.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.16.2",
    "heroku-logger": "^0.3.3",
    "http-errors": "^1.7.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.0.0",
    "morgan": "^1.9.1",
    "objection": "^3.0.1",
    "pg": "^8.7.3",
    "pug": "^3.0.1"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "1.8.2",
    "@types/jest": "26.0.24",
    "@types/morgan": "1.9.3",
    "@types/node": "^14.18.18",
    "@types/supertest": "2.0.12",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "cli-color": "^2.0.2",
    "concurrently": "^6.5.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "nodemon": "^2.0.20",
    "pg-escape": "^0.2.0",
    "prettier": "2.6.2",
    "supertest": "6.2.3",
    "tap": "^16.2.0",
    "ts-jest": "26.5.6",
    "ts-node": "^10.8.0",
    "typescript": "4.6.4"
  }
}
